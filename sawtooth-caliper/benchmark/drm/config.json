{
  "blockchain": {
    "type": "sawtooth",
    "config": "benchmark/drm/sawtooth.json"
  },
  "command": {
    "start":
      "docker-compose -f network/sawtooth/simplenetwork/docker-compose.yaml up -d",
    "end":
      "docker-compose -f network/sawtooth/simplenetwork/docker-compose.yaml down;docker rm $(docker ps -aq)"
  },
  "test": {
    "name": "drm",
    "description": "Benchmark for DRM scenario",
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [
      {
        "label": "publish",
        "txNumbAndTps": [[1, 1]],
        "arguments": { "itemBytes": 2048000 },
        "callback": "benchmark/drm/publish.js"
      },
      {
        "label": "query",
        "txNumbAndTps": [[1, 1]],
        "callback": "benchmark/drm/query.js"
      }
    ]
  },
  "monitor": {
    "type": "docker",
    "docker": {
      "name": [
        "peer0.org1.example.com",
        "peer1.org1.example.com",
        "peer0.org2.example.com",
        "peer1.org2.example.com",
        "orderer.example.com"
      ]
    },
    "interval": 1
  }
}
